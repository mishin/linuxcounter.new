{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ url('syw_front_main_info_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
    {{ form_row(form.firstname) }}
    {{ form_row(form.lastname) }}
    {{ form_row(form.city, { 'attr': {'placeholder': 'Search for your city by typing the name...'|trans} }) }}
    {{ form_row(form.birthday) }}
    {{ form_row(form.birthplace) }}
    {{ form_row(form.homepage) }}
    {{ form_row(form.icq) }}
    {{ form_row(form.skype) }}
    {{ form_row(form.jabber) }}
    {{ form_row(form.msn) }}
    {{ form_row(form.facebook) }}
    {{ form_row(form.google) }}
    {{ form_row(form.twitter) }}
    {{ form_row(form.identica) }}

    <div>
        <input type="submit" value="{{ 'profile.edit.submit'|trans }}" />
    </div>
</form>
